<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.pengguna.ActivityDetail">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:elevation="5dp"
        app:title="Detail Produk" />

    <LinearLayout
        android:id="@+id/layPesanDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:elevation="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btnHapus"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/dec_button"
            android:backgroundTint="@color/colorAccent"
            android:gravity="center"
            android:text="HAPUS"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/btnEdit"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/dec_button"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center"
            android:text="EDIT"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarDetail"
        android:layout_above="@+id/layPesanDetail"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgDetail"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:src="@drawable/tes_img_1"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/hargaDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Rp. 50.000,00"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"/>

                <TextView
                    android:id="@+id/namaDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Fuel Filter / Filter Bahan Bakar Injeksi NEW SUPRA X 125 FI Fuboru"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/stokDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="56 tersisa"
                    android:textColor="@color/colorGrey"
                    android:textStyle="bold"
                    android:textSize="15dp"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#FFDDDDDD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detail Produk"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/deskripsiDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Saringan Pompa Bensin / Filter Fuel Pump. Merk : Fuboru. Kualitas : Baik. Filter Bensin merupakan filter yang berfungsi untuk menyaring dan membersihkan bensin dari partikel dan kotoran sebelum dikirim ke fuel pump yang di mesin. Dapat Diaplikasikan Untuk Motor : Mio J, Supra X 125 Fi, Revo 110 Fi, New Blade 125 Fi, Vario 125 Fi, Beat Fi, Scoopy Fi, Vario 110 Fi"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>