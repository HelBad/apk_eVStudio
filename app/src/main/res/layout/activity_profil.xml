<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".pengguna.ActivityProfil">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarProfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:title="Edit Profil" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardNamaProfil"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_orang"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="15dp"/>

                        <EditText
                            android:id="@+id/namaProfil"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/white"
                            android:hint="Masukkan Nama Lengkap"
                            android:textColorHint="@color/colorGrey"
                            android:inputType="textPersonName"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="15dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardEmailProfil"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_email"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="15dp"/>

                        <EditText
                            android:id="@+id/emailProfil"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/white"
                            android:hint="Masukkan Email"
                            android:textColorHint="@color/colorGrey"
                            android:inputType="textEmailAddress"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="15dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTelpProfil"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_telp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="15dp"/>

                        <EditText
                            android:id="@+id/telpProfil"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/white"
                            android:hint="Masukkan Nomor Telepon"
                            android:textColorHint="@color/colorGrey"
                            android:inputType="number"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="15dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardNikProfil"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_id"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="15dp"/>

                        <EditText
                            android:id="@+id/nikProfil"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/white"
                            android:hint="Masukkan NIK"
                            android:textColorHint="@color/colorGrey"
                            android:inputType="number"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="15dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTempatProfil"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_lokasi"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="15dp"/>

                        <EditText
                            android:id="@+id/tempatProfil"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/white"
                            android:hint="Masukkan Tempat Lahir"
                            android:textColorHint="@color/colorGrey"
                            android:inputType="text"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="15dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTanggalProfil"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_kalender"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="15dp"/>

                        <EditText
                            android:id="@+id/tanggalProfil"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:background="@android:color/white"
                            android:gravity="center_vertical"
                            android:hint="Masukkan Tanggal Lahir"
                            android:textColorHint="@color/colorGrey"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:editable="false"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardGenderProfil"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_gender"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="15dp"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <Spinner
                                android:id="@+id/spinnerProfil"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_centerVertical="true"
                                android:backgroundTint="@android:color/black" />

                            <EditText
                                android:id="@+id/genderProfil"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="45dp"
                                android:layout_centerVertical="true"
                                android:background="@android:color/white"
                                android:gravity="center_vertical"
                                android:hint="Masukkan Jenis Kelamin"
                                android:textColorHint="@color/colorGrey"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:textSize="15dp"
                                android:editable="false"/>
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardAlamatProfil"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_beranda"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="15dp"/>

                        <EditText
                            android:id="@+id/alamatProfil"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/white"
                            android:hint="Masukkan Alamat"
                            android:textColorHint="@color/colorGrey"
                            android:inputType="text"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="15dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardFotoProfil"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_kamera"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="15dp"/>

                        <EditText
                            android:id="@+id/fotoProfil"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/white"
                            android:hint="Foto tampak wajah dan identitas"
                            android:textColorHint="@color/colorGrey"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:editable="false"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnBatal"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/dec_button"
                    android:backgroundTint="@color/colorAccent"
                    android:text="BATAL"
                    android:textColor="@android:color/white"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/btnSimpan"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/dec_button"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="SIMPAN"
                    android:textColor="@android:color/white"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>